# ==============================================================
# Private Directory - DENY ALL ACCESS
# ==============================================================
# This file should be outside web root, but if accidentally
# placed inside, this provides an extra layer of protection

# Deny all access
Order deny,allow
Deny from all

# Block everything
<FilesMatch ".*">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable PHP execution
<IfModule mod_php.c>
    php_flag engine off
</IfModule>

# Prevent directory listing
Options -Indexes

# Return 403 for any request
RedirectMatch 403 ^.*$
