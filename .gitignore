# ====================
# Junxtion App .gitignore
# ====================

# Configuration (contains secrets)
private/config.php
private/firebase_sa.json

# Logs
private/logs/
*.log

# Cache
private/cache/
private/backups/

# Rate limit files
private/cache/rate_limit/

# Uploads (user content)
public_html/uploads/menu/*
public_html/uploads/events/*
!public_html/uploads/menu/.gitkeep
!public_html/uploads/events/.gitkeep

# Environment files
.env
.env.local
.env.*.local
*.env

# IDE / Editor
.idea/
.vscode/
*.swp
*.swo
*~
.DS_Store
Thumbs.db

# Dependencies (if using composer)
/vendor/
composer.lock

# Node (if using for build tools)
node_modules/
package-lock.json
yarn.lock

# Testing
.phpunit.result.cache
coverage/

# Temporary files
*.tmp
*.temp
*.bak

# OS files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Security - never commit these
*.pem
*.key
*.crt
*.p12
*.pfx
credentials.json
secrets.json
